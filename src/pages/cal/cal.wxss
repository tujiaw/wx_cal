.content {
  height: 100vh; 
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color: grey;
  padding-top: 30rpx;
}

.screen {
  background-color: #ffffff;
  border-radius: 3px; 
  text-align: right;
  width: 720rpx;
  height: 100rpx;
  /* 文字垂直居中 */
  line-height: 100rpx;
  padding-right: 10rpx;
  margin-bottom: 30rpx;
}

.btnGroup {
  display: flex;
  flex-direction: row;
}

.item {
  width: 150rpx;
  min-height: 150rpx;
  margin: 10rpx;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
  border-radius: 5px;
  text-align: center;
  line-height: 150rpx;
}

